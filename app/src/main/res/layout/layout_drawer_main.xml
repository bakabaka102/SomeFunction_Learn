<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_160dp"
        android:background="@color/color_0097A7"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/activity_main_imv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tennnn"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tennn.books@mail.com" />

    </LinearLayout>

    <TextView
        android:id="@+id/leftMainContentAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:drawablePadding="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_12dp"
        android:text="About"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_info" />

    <TextView
        android:id="@+id/leftMainContentHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:drawablePadding="@dimen/dimen_12dp"
        android:paddingVertical="@dimen/dimen_12dp"
        android:text="Help"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_help" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:background="@color/color_7A868D" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
