<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lavender_mauve"> <!-- tím nhạt, 20% opacity -->

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Bo tròn ripple -->
            <solid android:color="@color/white" /> <!-- Mask là bắt buộc để giới hạn ripple -->
        </shape>
    </item>
</ripple>
